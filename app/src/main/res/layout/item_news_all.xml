<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp120"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:layout_weight="1.8"
        android:scaleType="centerCrop"
        android:src="@mipmap/item_news_sample" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:layout_weight="3.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="[Từ 16/04/2016] Thay đổi chính sách đổi thẻ cào sang tiền mặt"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:ellipsize="end"
            android:lines="2"
            android:text="Bắt đầu từ 16/04/2016, chúng tôi sẽ có chính sách mới cho việc quy đổi thẻ cào sang tiền mặt"
            android:textSize="@dimen/sp13" />

    </LinearLayout>

</LinearLayout>