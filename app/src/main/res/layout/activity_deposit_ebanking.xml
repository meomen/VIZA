<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:src="@mipmap/ic_back_green" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Nạp từ Internet Banking"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp24" />


    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_below="@id/relativeLayout1"
        android:background="@drawable/shadow"></View>

   <LinearLayout
       android:id="@+id/linearLayout1"
       android:layout_below="@+id/view1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginStart="@dimen/dp20"
       android:layout_marginEnd="@dimen/dp20"
       android:gravity="center">

       <ImageView
           android:id="@+id/img_logo_bank"
           android:layout_width="@dimen/dp150"
           android:layout_height="@dimen/dp150"
           android:scaleType="centerInside"/>
       <TextView
           android:id="@+id/tv_number_account"
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:layout_marginTop="@dimen/dp10"
           android:layout_marginStart="@dimen/dp120"
           android:layout_marginEnd="@dimen/dp100"
           android:textColor="@android:color/darker_gray"
           android:text="Số Tài Khoản: 1251 0000 5863 28"/>
       <TextView
           android:id="@+id/tv_name_owner"
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:layout_marginTop="@dimen/dp10"
           android:layout_marginStart="@dimen/dp120"
           android:layout_marginEnd="@dimen/dp100"
           android:layout_marginBottom="@dimen/dp5"
           android:textColor="@android:color/darker_gray"
           android:text="Chủ Sở Hữu:  Vũ Đức Minh"/>

       <Button
           android:id="@+id/btn_disconnect"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dp25"
           android:layout_gravity="end"
           android:textSize="10sp"
           android:textColor="@android:color/white"
           android:background="@drawable/button_style_6"
           android:textStyle="italic"
           android:text="Hủy liên kết" />


   </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@color/colorDivider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20">


        <EditText

            android:id="@+id/edit_so_tien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp50"
            android:layout_marginEnd="@dimen/dp50"
            android:hint="Nhập số tiền: "
            android:inputType="number"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20">
        <Button
            android:id="@+id/btn_bankother"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/button_style_5"
            android:text="Kết nối ngân hàng khác"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_deposite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@drawable/button_style_2"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="Nạp tiền"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>